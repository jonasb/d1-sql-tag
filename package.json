{
  "name": "d1-sql-tag",
  "version": "0.5.0",
  "description": "A template literal for working with Cloudflare D1 database",
  "keywords": [
    "d1",
    "cloudflare",
    "sqlite"
  ],
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonasb/d1-sql-tag.git"
  },
  "publishConfig": {
    "provenance": true
  },
  "scripts": {
    "build": "tsdown src/index.ts --format esm --sourcemap --dts",
    "changeset": "changeset",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "release": "npm run build && npm run test && changeset publish",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20250514.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@cloudflare/vitest-pool-workers": "^0.10.14",
    "@types/node": "^25.0.3",
    "prettier": "^3.5.3",
    "tsdown": "^0.18.3",
    "typescript": "^5.8.3",
    "vitest": "~3.2.0",
    "wrangler": "^4.53.0"
  }
}
